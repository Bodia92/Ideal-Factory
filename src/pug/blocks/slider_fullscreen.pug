section.section.slider_fullscreen
	.slider_fullscreen__swiper.swiper
		ul.slider_fullscreen__list.swiper-wrapper
			each slide in slides
				li.slider_fullscreen__item.swiper-slide
					.slider_fullscreen_slide
						h3.slider_fullscreen_slide__title.titleAnim= slide.title
						p.slider_fullscreen_slide__text= slide.text
						.slider_fullscreen_slide__image_wrap.imageAnim
							+picture({
								img: slide.image.src,
								class: 'slider_fullscreen_slide__picture',
								img_class: 'slider_fullscreen_slide__image',
								alt: slide.image.alt,
							})
		.slider_fullscreen__scrollbar
			.slider_fullscreen__drag
				.slider_fullscreen__drag_arrows
					+icon( 'slider_arrow_prev' , 'icon--size_mod')
